{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "allowJs": false,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/.*/"]
}
