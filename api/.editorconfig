# Top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.py]
indent_size = 2

# JavaScript and TypeScript files
[*.{js,ts}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
